@model FertilizerStockVM
@{
    ViewBag.Title = "Fertilizer Stock Entry";
}

<h4 class="mb-3">@((Model.StockID == 0) ? "Add Fertilizer Stock" : "Update Fertilizer Stock")</h4>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.StockID)

    <div class="row">
        <div class="col-md-4">
            <label>Fertilizer</label>
            @Html.DropDownListFor(m => m.FertilizerID, Model.FertilizerList, "-- Select --",
        new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            <label>Opening Stock</label>
            @Html.TextBoxFor(m => m.OpeningStock, new { @class = "form-control", type = "number", step = "0.01" })
        </div>

        <div class="col-md-4">
            <label>Purchased Quantity</label>
            @Html.TextBoxFor(m => m.PurchasedQty, new { @class = "form-control", type = "number", step = "0.01" })
        </div>
    </div>

    <div class="row mt-3">
        
        <div class="col-md-4">
            <label>Unit</label>
            @Html.TextBoxFor(m => m.QtyUnit, new { @class = "form-control", placeholder = "KG / BORI" })
        </div>

        <div class="col-md-4">
            <label>Remarks</label>
            @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control" })
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            @(Model.StockID == 0 ? "Save Stock" : "Update Stock")
        </button>

        <a href="@Url.Action("Entry")" class="btn btn-secondary">Reset</a>
    </div>
}

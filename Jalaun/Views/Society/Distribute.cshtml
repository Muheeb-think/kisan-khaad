@model DistributeVM

<h4>Distribute Fertilizer</h4>

<div class="row">
    <div class="col-md-4"><b>Farmer:</b> @Model.FarmerName</div>
    <div class="col-md-4"><b>Fertilizer:</b> @Model.FertilizerName</div>
    <div class="col-md-4"><b>Available Stock:</b> @Model.AvailableStock</div>
</div>

<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.DemandDetailsId)
    @Html.HiddenFor(m => m.FertilizerId)
    @Html.HiddenFor(m => m.SocietyId)

    <div class="row">
        <div class="col-md-4">
            <label>Total Demand</label>
            <input class="form-control" value="@Model.FertilizerNeed" readonly />
        </div>

        <div class="col-md-4">
            <label>Already Received</label>
            <input class="form-control" value="@Model.ReceiveQty" readonly />
        </div>

        <div class="col-md-4">
            <label>Distribute Qty</label>
            @Html.TextBoxFor(m => m.DistributeQty,
        new { @class = "form-control", type = "number", step = "0.01" })
        </div>
    </div>

    <div class="mt-3">
        <label>Remarks</label>
        @Html.TextBoxFor(m => m.Remarks, new { @class = "form-control" })
    </div>

    <button class="btn btn-success mt-3">Distribute</button>
}

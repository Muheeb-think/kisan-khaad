@using BAL.Common
@using DAL.ViewModel
@model FertilizerDemandVM
<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <title>डिजिटल उर्वरक मांग और वितरण प्रबंधन प्रणाली</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    @*   <link rel="stylesheet" href="dashboard.css"> *@
    <link href="~/css/samitidashboard.css" rel="stylesheet" />

</head>
@{
           var societydashboard = Model.DashboardDT;
}
<body>

    <div class="container">

        <header>
            <div class="logo">
                <i class="fa-solid fa-bars"></i>
            </div>
            <h1>समिति प्रबंधन डैशबोर्ड</h1>
        </header>

        <p class="subtitle">@SessionHelper.UserName - मांग, स्टॉक एवं वितरण सारांश</p>

        <!-- Cards Row -->
        <div class="row">

            <div class="col">
                <div class="card top-blue">
                    <div class="card-head">
                        <span>आज की मांग</span>
                        <i class="fa-solid fa-clipboard-list"></i>
                    </div>
                    <div class="card-body">
                        <h2>@societydashboard.Rows[0]["TotalfertilizerNeed"].ToString()</h2>
                        <p class="text-green">↑ 15% कल से</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card top-green">
                    <div class="card-head">
                        <span>पूर्ण वितरण</span>
                        <i class="fa-solid fa-circle-check"></i>
                    </div>
                    <div class="card-body">
                        <h2>@societydashboard.Rows[0]["TotalDistributed"].ToString()</h2>
                        <p class="text-green">↑ 8% कल से</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card top-red">
                    <div class="card-head">
                        <span>लंबित वितरण</span>
                        <i class="fa-solid fa-clock"></i>
                    </div>
                    <div class="card-body">
                        <h2>@societydashboard.Rows[0]["TotalfertilizerPending"].ToString()</h2>
                        <p class="text-red">↑ 12% कल से</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card top-orange">
                    <div class="card-head">
                        <span>स्टॉक उपलब्ध</span>
                        <i class="fa-solid fa-boxes-stacked"></i>
                    </div>
                    <div class="card-body">
                        <h2>@societydashboard.Rows[0]["CurrentStock"].ToString()</h2>
                        <p class="text-green">— स्थिर</p>
                    </div>
                </div>
            </div>
        </div>


    </div>


    <div class="row align-items-stretch">
        <div class="col-md-6 d-flex">
            <div class="card w-100 h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">उर्वरक की मांग (किलोग्राम में)</h5>
@* 
                    <div class="btn-group">
                        <button class="btn btn-sm btn-primary" onclick="loadChart('TODAY')">आज</button>
                        <button class="btn btn-sm btn-outline-primary" onclick="loadChart('WEEK')">इस सप्ताह</button>
                        <button class="btn btn-sm btn-outline-primary" onclick="loadChart('MONTH')">इस माह</button>
                    </div> *@
                </div>

                <div class="card-body">
                    <div id="villageDemandChart"></div>
                </div>
            </div>
        </div>

        <div class="col-md-6 d-flex">
            <div class="card w-100 h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">उर्वरक प्रकार मांग</h5>
                </div>

                <div class="card-body">
                    <div id="fertilizerTypeChart"></div>
                </div>
            </div>
        </div>
    </div>



    <script>
        var villageNames = @Html.Raw(
                                                Newtonsoft.Json.JsonConvert.SerializeObject(Model.FertilizerDemandFertilizerWise.Select(x => x.ItemName)
                                                )
                                );

        var demandKg = @Html.Raw(
                                                Newtonsoft.Json.JsonConvert.SerializeObject(Model.FertilizerDemandFertilizerWise.Select(x => x.DemandKg)
                                                )
                                );

        var options = {
            chart: {
                type: 'bar',
                height: 350,
                toolbar: { show: false }
            },
            series: [{
                name: 'मांग (किलोग्राम में)',
                data: demandKg
            }],
            xaxis: {
                categories: villageNames,
                title: { text: 'उर्वरक' }
            },
            yaxis: {
                title: { text: 'मांग (किलोग्राम में)' }
            },
            colors: ['#3498db'],
            plotOptions: {
                bar: {
                    borderRadius: 6,
                    columnWidth: '20%'
                }
            },
            dataLabels: {
                enabled: false
            }
        };

        var chart = new ApexCharts(
            document.querySelector("#villageDemandChart"),
            options
        );
        chart.render();
    </script>


    <script>
           var FertilizerNames = @Html.Raw( Newtonsoft.Json.JsonConvert.SerializeObject(
                                                                                                    Model.FertilizerDemandFertilizerWise.Select(x => x.ItemName)
                                                                                                ));

        var demandKg = @Html.Raw( Newtonsoft.Json.JsonConvert.SerializeObject(
                                                Model.FertilizerDemandFertilizerWise.Select(x => x.DemandKg)
                                                                                                ));

        var optionsPie = {
            chart: {
                type: 'pie',
                height: 350
            },
            labels: FertilizerNames,
            series:demandKg,
            colors: ['#3498db', '#2ecc71', '#e74c3c', '#f39c12'],
            legend: {
                position: 'bottom'
            }
        };

        new ApexCharts(
            document.querySelector("#fertilizerTypeChart"),
            optionsPie
        ).render();
    </script>

</body>
</html>

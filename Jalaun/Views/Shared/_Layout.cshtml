    <script>
        function bindDropDown(id, Action, GetById, defaultSelectionValues) {
            defaultSelectionValues = defaultSelectionValues ?? "-1";
            $.ajax({
                type: 'POST',
                url: '/Home/FillDropdown',
                contentType: 'application/json',
                data: JSON.stringify({ Action, GetById }),
                success: function (response) {

                    var ddl = $('#' + id);
                    ddl.empty();

                    ddl.append('<option value="-1">विकल्प चुनें</option>');

                    if (response.status === true) {
                        $.each(response.data, function (_, item) {
                            ddl.append(`<option value="${item.id}">${item.value}</option>`);
                        });
                    }

                    ddl.val(defaultSelectionValues);
                }
            });
        }

    </script>


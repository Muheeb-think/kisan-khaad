@model RoleViewModel

    <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>
            <i class="fa fa-map-marker-alt"></i>@(Model.RoleTypeId == 0 ? "Add Role" : "Edit Role")
            </h4>

            <a href="@Url.Action("TehsilMaster", "Admin")" class="btn btn-outline-dark">
                <i class="fa fa-arrow-left"></i> वापस
            </a>
        </div>
        <hr />


    @if (TempData["msg"] != null && TempData["msg"].ToString() == "success")
    {
        <div class="alert alert-success">@TempData["msg"]</div>
    }
    @if (TempData["flag"] != null && @TempData["msg"]!=null)
    {
        <div class="alert alert-danger">@TempData["msg"]</div>
    }
    @using (Html.BeginForm("CreateRole", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.RoleTypeId)

        <div class="row">

            <div class="col-md-4">
                <label>रोल का नाम (English)</label>
                @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
            </div>

            <div class="col-md-4">
                <label>रोल का नाम(Eng) (Hindi)</label>
                @Html.TextBoxFor(m => m.RoleNameHi, new { @class = "form-control" })
            </div>

            <div class="col-md-2 mt-4">
                <div class="form-check form-switch">
                    @Html.CheckBoxFor(m => m.IsActive, new
                        {
                            @class = "form-check-input",
                            role = "switch"
                        })
                    <label class="form-check-label">
                        @(Model.IsActive ? "सक्रिय" : "निष्क्रिय")
                    </label>
                </div>
            </div>

            <div class="col-md-2 mt-4">
                <button class="btn btn-success">Save</button>
                
            </div>

        </div>
    }
    <div class="row">
      

<table class="table table-responsive table-striped example">
    <thead>
        <tr>
                    <th>क्रमांक</th>
                    <th>रोल का नाम (English)</th>
                    <th>रोल का नाम (Hindi)</th>
                    <th>स्टेटस</th>
                    <th>एक्शन</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model.roles)
        {
            <tr>
                <td>@i</td>
                <td>@item.RoleName</td>
                <td>@item.RoleNameHi</td>
                <td>
                    @(item.IsActive ? "Active" : "Inactive")
                </td>
                <td>
                            <a href="#" onclick="edit('@item.RoleName','@item.RoleNameHi',@item.RoleTypeId)"
                       class="btn btn-sm btn-primary">
                        Edit
                    </a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

    </div>
</div>
<script>
    function edit(englishName, HindiName, id) {
        //alert(HindiName);
        $('#RoleName').val(englishName);
        $('#RoleNameHi').val(HindiName);
        $('#RoleTypeId').val(id);
       
    }

</script>